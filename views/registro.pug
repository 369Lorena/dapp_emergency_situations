extends layout

block content
  nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.mb-4(role='navigation')
    div.container
      a.navbar-brand(href='/') BlockChain Emergencias
                


  main.container(role='main')
    .jumbotron
      h1 Formulario de Registro
      p.lead
        | Proceso de registro a la herramienta
    .container
    
    .row
      .col-md-12
        form(action='/registro', method='post', autocomplete='off')
          .form-group
            label(for='user_type')
              strong Tipo de usuario
            select#user_type.form-control(onclick='user_switch()', name='user_type', required)
              option(value='', selected, disabled) Por favor seleccione un tipo
              option Operador de emergencias
              option Proveedor de recursos
              option Solicitante y proveedor de recursos

          .form-group
            label(for='email')
              strong Email
            input#email_registration.form-control.form-control-sm(placeholder='Email', type='email', pattern='[a-zA-Z0-9_]+([.][a-zA-Z0-9_]+)*@[a-zA-Z0-9_]+([.][a-zA-Z0-9_]+)*[.][a-zA-Z]{1,5}', name='email', required)

          .form-group
            label(for='password')
              strong Contraseña
            input#password_registration.form-control.form-control-sm(placeholder='Contraseña', type='password', name='password', required)

          div#hidden_fields(style='display:none;')
            .form-group
              label(for='organization')
                strong Nombre de la organización
              input#organization.form-control.form-control-sm(placeholder='Ingresar el nombre de la organización', type='text', name='organization', required)

            .form-group
              label(for='location')
                strong Ubicación de la organización
              br
              button.btn.btn-secondary(type='button', onclick='getLocation()') Ubicación actual
              p#error_with_geolocation
              input#pac-input.form-control.form-control-sm(type='text', placeholder='Introduzca la dirección postal', name='google_maps_input')
              div#map
              strong Latitud
              input#latitude.form-control(type='text', name='latitude', placeholder='Ingresar latitud', required)
              strong Longitud
              input#longitude.form-control(type='text', name='longitude', placeholder='Ingresar longitud', required)

            .form-group
              label(for='ambulances')
                strong Número de ambulancias
              input#ambulances.form-control(type='number' placeholder='Ingresar el número de ambulancias', name='ambulances', required)

            .form-group
              label(for='firefighters')
                strong Número de camiones de bomberos
              input#firefighters.form-control(type='number' placeholder='Ingresar el número de camiones de bomberos', name='firefighters', required)
          
            .form-group
              label(for='police')
                strong Número de policias
              input#police.form-control(type='number' placeholder='Ingresar el número de policias', name='police', required)

          button.btn.btn-primary(type='submit') Enviar
  script(src='js/form_register.min.js')
  script(src='js/map.min.js')
  script(src='https://maps.googleapis.com/maps/api/js?key=AIzaSyAR51eYlvnZn7xXA-4ZCdQW8CnDXTdy8NY&libraries=places&callback=initAutocomplete', async, defer)